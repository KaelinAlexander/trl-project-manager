<a href='/editors/<%= @editor.id %>/edit'>
<button class='btn grey waves-effect waves-light right'>
Edit Editor
<i class='material-icons right'>edit</i>
</button>
</a>
<h4><%= @editor.name %></h4>
<a href='/editors/<%= @editor.id %>/delete'>
<button class='btn grey waves-effect waves-light right'>
Remove Editor
<i class='material-icons right'>delete</i>
</button>
</a>
<br>
<h5>E-Mail: <%= @editor.email %></h5>
<h5>Phone: <%= @editor.phone %></h5>
<h5>Website: <%= @editor.website %></h5>
<h5>Notes: <%= @editor.notes %></h5>
<br>
<% if @editor.tasks.empty? %>
<h5>This editor currently has no assigned tasks.</h5>
<% else %>
<h5>CURRENT TASKS:</h5>
<div class='row'>
<% @editor.tasks.each do |task| %>
<div class="col s12 m6 l4">
  <div class="card small grey">
    <div class="card-content white-text">
      <span class="card-title"><%= task.name %> for <%= task.project.author %>'s <%= task.project.title %></span>
      <p>Start: <%= task.start_date %></p>
      <p>End: <%= task.end_date %></p>
      <br>
      <% if !task.editors.empty? %>
      <p>Editor: <%= task.editors.first.name %></p>
      <% else %>
      <p>No editor assigned.
      <% end %>
    </div>
    <div class="card-action">
      <a class="white-text" href='/tasks/<%= task.id %>'><i class="material-icons">format_list_bulleted</i></a>
      <a class="white-text" href='/tasks/<%= task.id %>/edit'><i class="material-icons">edit</i></a>
      <a class="white-text" href='/tasks/<%= task.id %>/delete'><i class="material-icons">delete</i></a>
    </div>
  </div>
</div>
<% end %>
</div>
<% end %>
